<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.javacafe.owl.core.domain">
	<class name="User" table="User">
		<id name="email" type="java.lang.String" column="email" />
		<property name="username" type="java.lang.String" column ="name" />
		<property name="hashedPassword" type="java.lang.String" column="hashed_password" />
	</class>
</hibernate-mapping>